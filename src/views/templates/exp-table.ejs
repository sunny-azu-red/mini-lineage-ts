<p>
    You currently have <span class="xp"><%= currentExp %> XP</span>, 
    <% if (currentLevel < maxLevel) { %>
        but you need <span class="xp"><%= xpNeeded %> XP</span> more to reach Level <%= currentLevel + 1 %>.
    <% } else { %>
        and you're already max level!
    <% } %>
</p>

<div class="exp-table-grid">
    <% columns.forEach(function(col, ci) { %>
        <table class="data-table exp-col">
            <thead>
                <tr>
                    <th class="center">Level</th>
                    <th>XP</th>
                </tr>
            </thead>
            <tbody>
                <% col.forEach(function(row) { %>
                    <tr<% if (row.rowClass === 'row-current') { %> class="row-current"<% } %>>
                        <td class="center">
                            <%= row.level %>
                        </td>
                        <td class="xp">
                            <%= row.expReq %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% }); %>
</div>

<p class="last"><a href="/">Go back</a></p>
