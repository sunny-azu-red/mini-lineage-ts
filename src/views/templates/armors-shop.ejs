<% if (alertHtml) { %>
    <div class="alert alert-info"><%- alertHtml %></div>
    <% } %>

        You have arrived at the Armor Shop.<br>
        The old man greets you and lets you look through his armors.<br><br>

        <table class="data-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Physical Defense</th>
                    <th>Adena</th>
                </tr>
            </thead>
            <tbody>
                <% armors.forEach(function(armor, i) { %>
                    <tr class="<%= i % 2 === 0 ? 'row-even' : 'row-odd' %>">
                        <td>
                            <%= armor.name %>
                        </td>
                        <td>
                            <%= armor.stat %>
                        </td>
                        <td class="gold">
                            <%= armor.costFormatted %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <br>

        <form method="POST" action="/shop/armors">
            <div class="form-row">
                <select class="form-select" name="select_armor">
                    <option value="">ðŸšª Leave Armor Shop</option>
                    <% armors.forEach(function(armor, i) { %>
                        <option value="<%= i + 1 %>">Buy <%= armor.name %>
                        </option>
                        <% }); %>
                </select>
                <button type="submit" class="btn">Submit</button>
            </div>
        </form>