<p>
    You have arrived at the Inn.<br>
    The young lady greets you and sets you at a table.
</p>

<table class="data-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Healing</th>
            <th>Adena</th>
        </tr>
    </thead>
    <tbody>
        <% items.forEach(function(food) { %>
            <tr>
                <td><%= food.emoji %> <%= food.name %></td>
                <td><%= food.stat %></td>
                <td class="gold"><%= food.costFormatted %></td>
            </tr>
        <% }); %>
    </tbody>
</table>

<form method="POST" action="/inn">
    <div class="form-row">
        <select class="form-select" name="select_food" id="inn-select">
            <option value="">ðŸšª Home Town</option>
            <% items.forEach(function(f) { %>
                <option value="<%= f.id %>">Pick <%= f.emoji %> <%= f.name %></option>
            <% }); %>
        </select>
        <button type="submit" class="btn btn-secondary" id="inn-btn">Return</button>
    </div>
</form>

<script>
    (function () {
        var sel = document.getElementById('inn-select');
        var btn = document.getElementById('inn-btn');
        sel.addEventListener('change', function () {
            btn.textContent = sel.value === '' ? 'Return' : 'ðŸª™ Order';
            btn.className = sel.value === '' ? 'btn btn-secondary' : 'btn';
        });
    })();
</script>
