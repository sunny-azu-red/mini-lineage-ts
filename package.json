{
  "name": "mini-lineage",
  "version": "1.5.0",
  "description": "Mini-Lineage Remastered is a modern rewrite of the original Mini-Lineage game.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "rm -rf dist && tsc && mkdir -p dist/views && cp -r src/views/templates dist/views/ && git rev-parse --short HEAD > dist/version.txt",
    "db:init": "ts-node src/scripts/init-db.ts",
    "db:fresh": "ts-node src/scripts/init-db.ts --fresh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Sunny",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "dotenv": "^17.3.1",
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "mysql2": "^3.17.4"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/node": "^25.3.0",
    "nodemon": "^3.1.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}